        <form action="/register" method="post" class="login">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <h1>Criar Conta</h1>

            <label for="enterEmail2">Email:</label>
            <input type="email" id="enterEmail2" name="email" placeholder="exemplo@exemplo.com">

            <label for="enterPassword2">Senha:</label>
            <input type="password" id="enterPassword2" name="password" placeholder="12345">

            <%- include('./includes/messages')%>

            <button type="submit">Criar</button>
        </form>
    </div>
