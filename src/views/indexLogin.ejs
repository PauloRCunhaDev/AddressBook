            <h1>Login</h1>

            <label for="enterEmail1">Email:</label>
            <input type="email" id="enterEmail1" name="email" placeholder="exemplo@exemplo.com">

            <label for="enterPassword1">Senha:</label>
            <input type="password" id="enterPassword1" name="password" placeholder="12345">

            <%- include('./includes/messages')%>
      
            <button type="submit">Entrar</button>

            <div class="creatCount">
                <a href="/register">Criar Conta</a>
            </div>
        </form>
    </div>
